<%- include('layouts/header.ejs'); -%>
<%- include('layouts/body.ejs'); -%>
<h1>Hello <%= username %></h1>

<div class="blogs">
    <h2>List of Blogs</h2>
    <% if (blogs.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach(function(blog) { %>
                    <tr>
                        <td><%= blog.pagetitle %></td>
                        <td><%- blog.content %></td> 
                        <td><img src="/public/images/<%= blog.imageName %>" alt="broken image width="100" height="70"></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No blogs found.</p>
    <% } %>
</div>


<%- include('layouts/footer.ejs'); -%>
